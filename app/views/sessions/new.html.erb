<h1>User Login</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

<%= form_tag login_path do %>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
  <br/>

  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br/>

  <%= submit_tag "Log in" %>
<% end %>