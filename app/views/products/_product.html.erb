<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url, alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end %>
  <div class="d-flex justify-content-start">
    <% if product.quantity == 0 %>
      <button class="btn btn-danger me-2" disabled>Sold Out</button>
    <% end %>
    <%= button_to add_item_cart_path(product_id: product.id), 
      class: "btn btn-success#{' disabled' if product.quantity == 0}", 
      method: :post do %>
        <%= fa_icon "shopping-cart", text: 'Add' %>
    <% end %>
  </div>
</article>