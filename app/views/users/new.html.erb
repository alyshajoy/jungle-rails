<h1 class="page-header">Register Your Account</h1>

<%= form_for :user, url: users_path do |f| %>
  <div class="mb-3">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <br/>
  </div>

  <div class="mb-3">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <br/>
  </div>

  <div class="mb-3">
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br/>
  </div>

  <div class="mb-3">
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br/>
  </div>

  <div class="mb-3">
    <%= f.submit "Register" %>
  </div>
<% end %>